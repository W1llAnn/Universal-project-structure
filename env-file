# ========================================
# СЕТЕВЫЕ НАСТРОЙКИ
# Порты должны соответствовать тем, что указаны в docker-compose.yml
# Внешний порт (в compose) : внутренний порт (здесь)
# Пример: "8000:20142" → APP_PORT=20142

# Хост (обычно 0.0.0.0 внутри контейнера)
APP_HOST=0.0.0.0

# Порт, на котором будет работать FastAPI (внутри контейнера)
APP_PORT=20142

# Порт для Gradio-интерфейса (внутри контейнера)
GRADIO_PORT=20141


# ========================================
# МОДЕЛЬ ЯЗЫКОВОЙ МОДЕЛИ (LLM)
# Поддерживаемые: gpt-3.5-turbo, gpt-4o-mini, claude-3-haiku и др.

LLM_MODEL=gpt-4o-mini


# ========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# Формат: тип://пользователь:пароль@хост:порт/имя_базы
# Примеры:
#   PostgreSQL: postgresql://user:pass@db:5432/myapp
#   SQLite (для тестов): sqlite:///./test.db

# Адрес подключения к БД. Хост 'db' — имя сервиса в docker-compose
DATABASE_URL=postgresql://myuser:mypassword123@db:5432/auto_reviewer_db


# ========================================
# РЕЖИМ ОТЛАДКИ
# DEBUG=True — больше логов, авто-перезагрузка, детальные ошибки
# В продакшене всегда ставь False!

DEBUG=True


# ========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# Можно добавлять свои под нужды проекта

# Максимальная длина текста для обработки (в символах)
MAX_TEXT_LENGTH=10000

# Таймаут запроса к LLM (в секундах)
LLM_TIMEOUT=30